@font-face {
  font-family: 'IBM VGA 8x16';
  src: local("IBM VGA 8x16"), url('WebPlus_IBM_VGA_8x16.woff') format('woff');
  font-weight: normal;
  font-style: normal;
}

    html, body {
      margin: 0;
      padding: 0;
      height: 100%;
      font-family: sans-serif;
    }
    .container {
      display: flex;
      height: 100vh;
    }
    .editor-container, .repl-container {
      flex: 1;
      display: flex;
      flex-direction: column;
      border-right: 1px solid #ccc;
    }
    .repl-container {
      border-right: none;
    }
    .editor-header {
      background: #eee;
      padding: 5px;
      display: flex;
      align-items: center;
    }
    #editor {
      flex: 1;
    }
    .unsaved-indicator {
      color: red;
      margin-left: 10px;
      font-weight: bold;
    }
    .repl-output {
      flex: 1;
      background: #f9f9f9;
      border-bottom: 1px solid #ccc;
      padding: 5px;
      overflow-y: auto;
      white-space: pre-wrap;
    }
    .repl-input {
      padding: 5px;
    }
    .repl-input input {
      width: 100%;
      padding: 5px;
      box-sizing: border-box;
      font-family: monospace;
    }